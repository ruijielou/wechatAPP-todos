.container {
  box-shadow: 0 0 5rpx #e0e0e0;
  padding: 40rpx;

}
.header {
  display: flex;
  width: 100%;
  border: 1rpx solid #ccc;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}
.header image {
  height: 41rpx;
  width: 41rpx;
  margin-right: 41rpx;

}
.header .new-todos {
  flex: 1;
  font-size: 28rpx;
}
.todos {
  border: 1px solid #ccc;
  border-radius: 5px;
  width: 100%;
  padding: 20rpx;
}
.todos .item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
}
.todos .item:last-child {
  border-bottom: none;
}
.todos .item .checkbox {
  margin-right: 10rpx;
}
.todos .item .name {
  flex: 1;
  font-size: 30rpx;
}
.todos .item.completed .name {
  text-decoration: line-through;
  color: #888;
}
.footer {
  display: flex;
  width: 100%;
  height: 30rpx;
  padding-top: 30rpx;
  font-size: 26rpx;
  justify-content: space-between;
}
.footer .btn {
  flex: 1;
}
.footer .btn:nth-child(3) {
  flex: 2;
  text-align: right;
}
